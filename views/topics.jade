extends layout

block content
  br 
  p Topics

  div#topics
    each topic, i in topics
      div.topic.baseDiv
        | #{topic.topic}  
        | #{topic.author}
  br
  div#createNewTopic.baseDiv
    | New topic:
    br
    input#topic(placeholder="New topic title")
    br
    | Description:
    br
    textarea#description(placeholder="Description what this topic is about")
    br
    | Author:
    br
    input#name(placeholder="Author")
    br
    button#submitNewTopic Save