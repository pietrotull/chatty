extends layout

block breadcrump
  span #{topic.title}

block content

  include topicDiv

  div.baseDiv
    b Users
    ul#users

  div#conversation
    each msg, i in messages
      div.msg.baseDiv
        div.profile [#{asTime(msg.date)}] #{msg.username} 
        | #{msg.content}

  div.highlightRow
    div.profile
      | [
      span#clock 00:00
      | ] 
      span#username anynomous
    input#msg(type='text', placeholder="New message")
    input#msgsend(type='button', value='Send')